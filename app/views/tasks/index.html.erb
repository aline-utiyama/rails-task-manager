<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task|  %>
  <ul>
    <li><%= task.completed ? " ✅ " : " ❌ " %><%= link_to task.title, task_path(task) %>
      <%= link_to '🗑', task_path(task), method: :delete, data: { confirm: "Are you sure?"}, class: "link" %>
    </li>
  </ul>
  <% end %>

  <%= link_to 'Add a new task', new_task_path, class: 'btn btn-primary' %>
</div>
