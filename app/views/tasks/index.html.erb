<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task|  %>
  <ul>
    <li><%= link_to task.title, task_path(task) %>
      <button class="btn btn-secondary mx-2"><%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?"} %></button>
    </li>
  </ul>
  <% end %>

  <%= link_to 'Add a new task', new_task_path, class: 'btn btn-primary' %>
</div>
